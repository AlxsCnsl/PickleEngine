{
    "sdl3":{
        "lib_dir_name":"SDL3",
        "base_version":"3.2.24",
        "versions":{
            "3.2.24":{
                "branch":"release-3.2.24",
                "http":"https://github.com/libsdl-org/SDL.git",
                "ssh":"git@github.com:libsdl-org/SDL.git",
                "type":"compiled",
                "deps":{
                    "ubuntu":"sudo apt-get install -y build-essential git make pkg-config cmake ninja-build gnome-desktop-testing libasound2-dev libpulse-dev libaudio-dev libfribidi-dev libjack-dev libsndio-dev libx11-dev libxext-dev libxrandr-dev libxcursor-dev libxfixes-dev libxi-dev libxss-dev libxtst-dev libxkbcommon-dev libdrm-dev libgbm-dev libgl1-mesa-dev libgles2-mesa-dev libegl1-mesa-dev libdbus-1-dev libibus-1.0-dev libudev-dev libpipewire-0.3-dev libwayland-dev libdecor-0-dev liburing-dev",
                    "debian":"sudo apt-get install -y build-essential git make pkg-config cmake ninja-build gnome-desktop-testing libasound2-dev libpulse-dev libaudio-dev libfribidi-dev libjack-dev libsndio-dev libx11-dev libxext-dev libxrandr-dev libxcursor-dev libxfixes-dev libxi-dev libxss-dev libxtst-dev libxkbcommon-dev libdrm-dev libgbm-dev libgl1-mesa-dev libgles2-mesa-dev libegl1-mesa-dev libdbus-1-dev libibus-1.0-dev libudev-dev libpipewire-0.3-dev libwayland-dev libdecor-0-dev liburing-dev",
                    "arch":"sudo pacman -S alsa-lib cmake hidapi ibus jack libdecor libgl libpulse libusb libx11 libxcursor libxext libxinerama libxkbcommon libxrandr libxrender libxss libxtst mesa ninja pipewire sndio vulkan-driver vulkan-headers wayland wayland-protocols"
                },
                "linux_install":[
                    "rm -rf build install",
                    "mkdir build",
                    "cd build && cmake .. -DCMAKE_BUILD_TYPE=Release -DBUILD_SHARED_LIBS=OFF -DSDL_STATIC=ON -DSDL_SHARED=OFF -DCMAKE_INSTALL_PREFIX=../install",
                    "cd build && cmake --build . -j$(nproc)",
                    "cd build && cmake --install . --prefix ../install"
                ],
                "windows_install":[
                    "if exist build rmdir /s /q build",
                    "if exist install rmdir /s /q install",
                    "mkdir build && cd build",
                    "cd build && cmake .. -DCMAKE_BUILD_TYPE=Release -DBUILD_SHARED_LIBS=OFF -DSDL_STATIC=ON -DSDL_SHARED=OFF -DCMAKE_INSTALL_PREFIX=../install",
                    "cd build && cmake --build . --config Release -j%NUMBER_OF_PROCESSORS%",
                    "cd build && cmake --install . --prefix ../install --config Release"
                ],
                "import_path":"install"
    }}},


